{
    "name": "ts-node-boilerplate",
    "scripts": {
        "build": "tsc --build --verbose",
        "start": "docker-compose down --remove-orphans && docker-compose up",
        "nodemon:docker": "NODE_OPTIONS='--inspect=0.0.0.0:9229' node -r ts-node/register src/index.ts",
        "watch:docker": "nodemon",
        "test": "NODE_ENV=dev jest -c jest.config.js",
        "test:coverage": "jest --collect-coverage -c jest.config.js",
        "test:watch": "jest --watchAll --verbose false -c jest.config.js",
        "lint": "eslint . --ext .ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kkuziel/ts-node-boilerplate.git"
    },
    "author": "kkuziel",
    "license": "ISC",
    "description": "{{ts-node-boilerplate}}",
    "dependencies": {
        "body-parser": "^1.19.0",
        "dotenv": "^16.0.3",
        "express": "^4.17.1",
        "helmet": "^4.6.0",
        "http-status-codes": "^2.1.4",
        "inversify": "^6.0.1",
        "inversify-express-utils": "^6.4.3",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.0",
        "@types/node": "^14.14.36",
        "eslint": "^8.34.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^27.2.0",
        "jest": "^29.4.3",
        "jest-extended": "^3.0.1",
        "nodemon": "^2.0.15",
        "ts-jest": "^29.0.5",
        "ts-loader": "^8.0.18",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.9.5"
    }
}
